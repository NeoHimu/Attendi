<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:id="@+id/idLLQRImage"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idQRImage"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_below="@+id/idLLQRImage"
        android:id="@+id/btnLLGenerateQRandShare"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="5sp">
        <Button
            android:id="@+id/idGenerateQRCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Generate"
            android:textColor="#ffffff"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/idShareQRCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/shareQRCode"
            android:textColor="#ffffff"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:weightSum="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/idBtnStartAttendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Start"
                android:textColor="#ffffff"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:textStyle="bold"
                android:background="@drawable/button"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/idBtnEndAttendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="End"
                android:textColor="#ffffff"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:textStyle="bold"
                android:background="@drawable/button"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@+id/btnLLGenerateQRandShare"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timings of Attendance :"
            android:textColor="@color/colorText"
            android:id="@+id/idTvTimingsOfAttendance"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>